{
  "openapi": "3.0.0",
  "info": {
    "title": "Toolz - Documentação",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Versão de teste"
    },
    {
      "url": "https://toolz-api.herokuapp.com/",
      "description": "Versão de produção"
    }
  ],
  "paths": {
    "/auth/sign-up": {
      "post": {
        "summary": "Cadastro de usuário",
        "tags": ["Auth"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/SignUpPayload" },
              "examples": {
                "user": {
                  "value": {
                    "name": "Carlos Gabriel",
                    "email": "carlosgabrielpc@live.com",
                    "password": "minhaSenhaDificil"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created - Usuário criado com sucesso"
          },
          "409": {
            "description": "Conflict - E-mail já utilizado"
          },
          "400": {
            "description": "Bad Request - Pelo menos um dos campos é inválido"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SignUpPayload": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "email": { "type": "string" },
          "password": { "type": "string" }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
